{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": ["src/app/*"],
      "@lib/*": ["src/library/*"],
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@type/*": ["src/types/*"],
      "@db/*": ["src/database/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
